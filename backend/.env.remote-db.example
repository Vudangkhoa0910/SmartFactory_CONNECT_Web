# ============================================
# SmartFactory CONNECT - Remote Database Configuration
# ============================================
# Copy this file to .env to use remote database
# Or use: ./scripts/switch-db.sh remote
# ============================================

# ========== PostgreSQL - Remote Server ==========
# Change to your WireGuard IP or public IP/domain
DB_HOST=10.0.0.1
DB_PORT=5432
DB_NAME=smartfactory_db
DB_USER=smartfactory
DB_PASSWORD=smartfactory123

# Connection pool (reduced for remote connections)
DB_POOL_MAX=30
DB_POOL_MIN=5
DB_STATEMENT_TIMEOUT=30000

# SSL Configuration (enable if using public internet)
DB_SSL=false
# DB_SSL_REJECT_UNAUTHORIZED=true
# DB_SSL_CA=/path/to/ca-cert.pem

# ========== MongoDB - Remote Server ==========
# Change 10.0.0.1 to your WireGuard IP or public IP/domain
MONGODB_URI=mongodb://smartfactory:smartfactory123@10.0.0.1:27017/smartfactory_media?authSource=admin
MONGODB_DB_NAME=smartfactory_media

# ========== Other Settings (keep same as local) ==========
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT
JWT_SECRET=smartfactory-jwt-secret-2024
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:80

# Rate Limit
ENABLE_RATE_LIMIT=true
SLOW_QUERY_THRESHOLD=1000

# Mistral AI
MISTRAL_API_KEY=${MISTRAL_API_KEY}
MISTRAL_MODEL=mistral-large-latest

# RAG Service
RAG_SERVICE_URL=http://rag_service:8001
