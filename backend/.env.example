# ============================================
# SmartFactory CONNECT - Backend Environment
# ============================================

# Node Environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:5173

# ============================================
# PostgreSQL Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartfactory_db
DB_USER=smartfactory
DB_PASSWORD=smartfactory123

# Database Pool Settings
DB_POOL_MAX=50
DB_POOL_MIN=10
DB_STATEMENT_TIMEOUT=30000

# ============================================
# MongoDB Configuration (Media Storage)
# ============================================
MONGODB_URI=mongodb://smartfactory:smartfactory123@localhost:27017/smartfactory_media?authSource=admin
MONGODB_DB_NAME=smartfactory_media

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=smartfactory-jwt-secret-2024
JWT_EXPIRES_IN=7d

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,video/mp4,audio/mpeg,application/pdf

# ============================================
# Rate Limiting & Performance
# ============================================
ENABLE_RATE_LIMIT=false
SLOW_QUERY_THRESHOLD=1000

# ============================================
# Pagination
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# Notification Configuration
# ============================================
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=smartfactoryconnect@gmail.com

# ============================================
# Node.js Memory Optimization
# ============================================
NODE_OPTIONS=--max-old-space-size=1024

# ============================================
# Mistral AI Configuration
# ============================================
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-large-latest

# ============================================
# RAG Service Configuration
# ============================================
RAG_SERVICE_URL=http://localhost:8001
