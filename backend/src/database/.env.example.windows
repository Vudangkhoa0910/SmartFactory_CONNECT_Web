# ================================================
# SmartFactory Backend Configuration (Windows)
# ================================================
# Copy this file to .env and update with your values

# ================================================
# SERVER CONFIGURATION
# ================================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ================================================
# Default PostgreSQL user on Windows is usually 'postgres'
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartfactory_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Connection pool settings
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ================================================
# JWT & AUTHENTICATION
# ================================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=smartfactory_jwt_secret_key_2024_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=smartfactory_refresh_secret_key_2024_change_in_production
JWT_REFRESH_EXPIRE=30d

# ================================================
# PASSWORD & SECURITY
# ================================================
PASSWORD_RESET_EXPIRE=3600000
# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# ================================================
# CORS CONFIGURATION
# ================================================
# Frontend URL - update if using different port
CORS_ORIGIN=http://localhost:5173
# For multiple origins, separate with comma:
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ================================================
# FILE UPLOAD
# ================================================
# Max file size in bytes (5MB default)
MAX_FILE_SIZE=5242880
# Upload directory (Windows path format)
UPLOAD_DIR=./uploads
# Allowed file types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ================================================
# EMAIL CONFIGURATION (Optional)
# ================================================
# For password reset and notifications
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@smartfactory.com
EMAIL_FROM_NAME=SmartFactory

# ================================================
# LOGGING
# ================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# ================================================
# SESSION (if using sessions)
# ================================================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# SOCKET.IO (Real-time features)
# ================================================
SOCKET_CORS_ORIGIN=http://localhost:5173

# ================================================
# FEATURE FLAGS
# ================================================
ENABLE_SWAGGER=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL=false

# ================================================
# WINDOWS SPECIFIC SETTINGS
# ================================================
# If using Windows paths, use forward slashes or escaped backslashes
# Example: C:/Users/YourName/SmartFactory or C:\\Users\\YourName\\SmartFactory

# ================================================
# DEVELOPMENT ONLY
# ================================================
# Set to true to enable detailed error messages
DEBUG=false
SHOW_SQL_QUERIES=false
